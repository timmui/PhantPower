<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/actionbar_orange"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    tools:context="com.getpebble.pebblekitexample.MainActivity" >

   <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#FFFFFF" >

        <TextView
            android:id="@+id/press_a_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Press a button on Pebble"
            android:textColor="#AAAAAA"
            android:textSize="25sp" />
        
        <TextView
            android:id="@+id/textViewBatteryInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/press_a_button"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="None yet"
            android:textColor="#AAAAAA"
            android:textSize="30sp" />
        
        <Button
            android:id="@+id/button_install"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/textViewBatteryInfo"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/actionbar_orange"
            android:text="Don't Have Pebble App"
            android:textColor="#FFFFFF" />
        
        <NumberPicker
	        android:id="@+id/numPick"
	        android:layout_width="180dp"
	        android:layout_height="wrap_content"
	        android:layout_marginRight="10dp"
	        android:layout_below="@id/button_install"
	        android:layout_alignParentLeft="true"  />
        
        <NumberPicker
	        android:id="@+id/numPick1"
	        android:layout_width="200dp"
	        android:layout_height="wrap_content"
	        android:layout_below="@id/button_install"
	        android:layout_toRightOf="@id/numPick"
	        android:layout_alignParentRight="true"  />
        
        <Button
            android:id="@+id/pick"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/numPick"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:background="@color/actionbar_orange"
            android:text="Confirm"
            android:textColor="#FFFFFF" />
        
        <TextView
            android:id="@+id/bounds"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/pick"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="None yet"
            android:textColor="#AAAAAA"
            android:textSize="30sp" />
        

    </RelativeLayout>

</LinearLayout>